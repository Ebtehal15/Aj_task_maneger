<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4"><%= t('myTasks') %></h1>
  <a href="/creator/tasks/new" class="btn btn-primary btn-sm">
    <i class="bi bi-plus-circle"></i> <%= t('createTask') %>
  </a>
</div>

<form class="card card-body shadow-sm mb-3" method="get" id="filterForm">
  <div class="row g-2 align-items-end">
    <div class="col-md-4">
      <label class="form-label"><%= t('filterByStatus') %></label>
      <select name="status" class="form-select filter-input">
        <option value="">--</option>
        <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>
          <%= t('status_pending') %>
        </option>
        <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>
          <%= t('status_in_progress') %>
        </option>
        <option value="done" <%= filters.status === 'done' ? 'selected' : '' %>>
          <%= t('status_done') %>
        </option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label"><%= t('filterByDate') %> (from)</label>
      <input type="date" name="from" value="<%= filters.from || '' %>" class="form-control filter-input" />
    </div>
    <div class="col-md-3">
      <label class="form-label"><%= t('filterByDate') %> (to)</label>
      <input type="date" name="to" value="<%= filters.to || '' %>" class="form-control filter-input" />
    </div>
    <div class="col-md-2 text-end">
      <button type="button" class="btn btn-primary mt-3" style="display: none;"><%= t('save') %></button>
    </div>
  </div>
</form>

<script>
  // Filtreleme formunu otomatik submit et
  (function() {
    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
      const filterInputs = filterForm.querySelectorAll('.filter-input');
      let submitTimeout;
      
      filterInputs.forEach(input => {
        input.addEventListener('change', function() {
          // Debounce: Kullanıcı yazmayı bitirdikten 300ms sonra submit et
          clearTimeout(submitTimeout);
          submitTimeout = setTimeout(() => {
            filterForm.submit();
          }, 300);
        });
      });
    }
  })();
</script>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if (!tasks.length) { %>
    <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th><%= t('taskTitle') %></th>
            <th><%= t('konuSorumlusu') %></th>
            <th><%= t('departman') %></th>
            <th><%= t('status') %></th>
            <th><%= t('deadline') %></th>
            <th><%= t('completedAt') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach((task, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <%= task.title %>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger ms-2"><%= t('urgent') %></span>
              <% } %>
            </td>
            <td><%= task.konu_sorumlusu_username || task.assigned_username || '-' %></td>
            <td><%= task.departman || '-' %></td>
            <td>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </td>
            <td><%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %></td>
            <td><%= task.completed_at ? (typeof task.completed_at === 'string' ? task.completed_at.slice(0,10) : new Date(task.completed_at).toISOString().slice(0,10)) : '-' %></td>
            <td class="text-end">
              <a href="/creator/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary">
                Detay
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

