<!-- Tablo Görünümü -->
<div class="card shadow-sm task-view-container d-none" id="tableView" data-view="table">
  <div class="card-body p-0">
    <% if (!tasks.length) { %>
    <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th><%= t('taskTitle') %></th>
            <th><%= t('assignedTo') %></th>
            <th><%= t('status') %></th>
            <th><%= t('deadline') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.id %></td>
            <td>
              <%= task.title %>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger ms-2"><%= t('urgent') %></span>
              <% } %>
            </td>
            <td><%= task.assigned_username %></td>
            <td>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </td>
            <td><%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %></td>
            <td class="text-end">
              <a href="/admin/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary">
                <%= t('viewTask') %>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<!-- Card Görünümü -->
<div class="task-view-container" id="cardView" data-view="card">
  <% if (!tasks.length) { %>
  <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
  <% } else { %>
  <div class="row g-3">
    <% tasks.forEach(task => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100 task-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <span class="badge bg-secondary">#<%= task.id %></span>
            <div>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger me-1"><%= t('urgent') %></span>
              <% } %>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </div>
          </div>
          <h5 class="card-title mb-3"><%= task.title %></h5>
          <div class="task-card-info">
            <p class="mb-2 small">
              <i class="bi bi-person"></i> <strong><%= t('assignedTo') %>:</strong> 
              <span class="text-muted"><%= task.assigned_username %></span>
            </p>
            <% if (task.bolge || task.il || task.belediye) { %>
            <p class="mb-2 small">
              <i class="bi bi-geo-alt"></i> 
              <% if (task.bolge) { %><span class="text-muted"><%= task.bolge %></span><% } %>
              <% if (task.il) { %> - <span class="text-muted"><%= task.il %></span><% } %>
              <% if (task.belediye) { %> - <span class="text-muted"><%= task.belediye %></span><% } %>
