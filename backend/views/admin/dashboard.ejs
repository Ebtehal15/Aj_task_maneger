    <a href="/admin/reports/export<%
      const validFilters = {};
      if (typeof filters !== 'undefined' && filters) {
        Object.keys(filters).forEach(key => {
          if (filters[key] && filters[key] !== 'undefined' && filters[key] !== 'null' && filters[key] !== '') {
            validFilters[key] = filters[key];
          }
        });
      }
      const queryString = Object.keys(validFilters).length > 0 ? '?' + new URLSearchParams(validFilters).toString() : '';
    %><%= queryString %>" class="btn btn-link btn-sm p-0 d-flex align-items-center" title="<%= t('exportExcel') %>" style="text-decoration: none;">
