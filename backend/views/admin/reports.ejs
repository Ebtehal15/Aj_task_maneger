<script>
  // Sayfa yüklenmeden önce varsayılan görünümü belirle (FOUC önlemek için)
  (function() {
    const isMobile = window.innerWidth < 768;
    const storageKey = isMobile ? 'taskViewPreferenceMobile' : 'taskViewPreferenceDesktop';
    const savedView = localStorage.getItem(storageKey);
    const defaultView = savedView || (isMobile ? 'card' : 'table');
    
    // HTML'e data attribute ekle
    document.documentElement.setAttribute('data-default-view', defaultView);
  })();
</script>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4"><%= t('reports') %></h1>
  <div class="d-flex gap-2 align-items-center">
    <a href="/admin/reports/export<%
      const validFilters = {};
      Object.keys(filters || {}).forEach(key => {
        if (filters[key] && filters[key] !== 'undefined' && filters[key] !== 'null' && filters[key] !== '') {
          validFilters[key] = filters[key];
        }
      });
      const queryString = Object.keys(validFilters).length > 0 ? '?' + new URLSearchParams(validFilters).toString() : '';
    %><%= queryString %>" class="btn btn-success btn-sm">
      <i class="bi bi-file-earmark-excel"></i>
      <%= t('exportExcel') %>
    </a>
    <div class="btn-group" role="group" aria-label="View toggle">
      <button type="button" class="btn btn-sm btn-outline-secondary view-toggle-btn" data-view="table" title="Tablo Görünümü">
        <i class="bi bi-table"></i>
        <span class="d-none d-md-inline">Table</span>
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary view-toggle-btn" data-view="card" title="Kart Görünümü">
        <i class="bi bi-grid-3x3-gap"></i>
        <span class="d-none d-md-inline">Card</span>
      </button>
    </div>
  </div>
</div>

<form class="card card-body shadow-sm mb-3" method="get" action="/admin/reports" id="filterForm">
  <div class="row g-2 align-items-end">
    <div class="col-md-3">
      <label class="form-label"><%= t('filterByUser') %></label>
      <select name="userId" class="form-select filter-input">
        <option value="">--</option>
        <% users.forEach(u => { %>
        <option value="<%= u.id %>" <%= filters.userId == u.id ? 'selected' : '' %>>
          <%= u.username %>
        </option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label"><%= t('filterByStatus') %></label>
      <select name="status" class="form-select filter-input">
        <option value="">--</option>
        <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>
          <%= t('status_pending') %>
        </option>
        <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>
          <%= t('status_in_progress') %>
        </option>
        <option value="done" <%= filters.status === 'done' ? 'selected' : '' %>>
          <%= t('status_done') %>
        </option>
      </select>
    </div>
    <div class="col-md-2">
      <label class="form-label"><%= t('filterByDate') %> (from)</label>
      <input type="date" name="from" value="<%= filters.from || '' %>" class="form-control filter-input" />
    </div>
    <div class="col-md-2">
      <label class="form-label"><%= t('filterByDate') %> (to)</label>
      <input type="date" name="to" value="<%= filters.to || '' %>" class="form-control filter-input" />
    </div>
    <div class="col-md-2 text-end">
      <button type="button" class="btn btn-primary mt-3" style="display: none;"><%= t('save') %></button>
    </div>
  </div>
</form>

<script>
  // Filtreleme formunu otomatik submit et
  (function() {
    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
      const filterInputs = filterForm.querySelectorAll('.filter-input');
      let submitTimeout;
      
      filterInputs.forEach(input => {
        input.addEventListener('change', function() {
          // Debounce: Kullanıcı yazmayı bitirdikten 300ms sonra submit et
          clearTimeout(submitTimeout);
          submitTimeout = setTimeout(() => {
            filterForm.submit();
          }, 300);
        });
      });
    }
  })();
</script>

