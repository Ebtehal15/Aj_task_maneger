            <p class="mb-2 small">
              <i class="bi bi-building"></i> <strong><%= t('departman') %>:</strong> 
              <span class="text-muted"><%= task.departman %></span>
            </p>
            <% } %>
            <p class="mb-0 small">
              <i class="bi bi-calendar"></i> <strong><%= t('deadline') %>:</strong> 
              <span class="text-muted">
                <%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %>
              </span>
            </p>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 pt-0">
          <a href="/admin/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary w-100">
            <i class="bi bi-eye"></i> <%= t('viewTask') %>
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>

<script>
  // Görünüm değiştirme
  (function() {
    const viewToggleBtns = document.querySelectorAll('.view-toggle-btn');
    const tableView = document.getElementById('tableView');
    const cardView = document.getElementById('cardView');
    
    // Ekran genişliğine göre varsayılan görünüm belirle
    function getDefaultView() {
      // Mobil için card, desktop için table
      return window.innerWidth < 768 ? 'card' : 'table';
    }
    
    // Ekran genişliğine göre localStorage key belirle
    function getStorageKey() {
      return window.innerWidth < 768 ? 'taskViewPreferenceMobile' : 'taskViewPreferenceDesktop';
    }
    
    // LocalStorage'dan kaydedilmiş görünüm tercihini yükle, yoksa ekran genişliğine göre varsayılan kullan
    const storageKey = getStorageKey();
    const savedView = localStorage.getItem(storageKey);
    // Eski localStorage key'ini temizle (migration)
    if (localStorage.getItem('taskViewPreference')) {
      localStorage.removeItem('taskViewPreference');
    }
    const defaultView = savedView || getDefaultView();
    
    function switchView(view, force = false) {
      const isMobile = window.innerWidth < 768;
      
      // Eğer kullanıcı tercihi yoksa ve force değilse, CSS varsayılanını kullan
      if (!force && !savedView) {
        const cssDefaultView = isMobile ? 'card' : 'table';
        if (view !== cssDefaultView) {
          view = cssDefaultView;
        }
      }
      
      // Force class'larını temizle
      tableView.classList.remove('force-show', 'force-hide');
      cardView.classList.remove('force-show', 'force-hide');
      
      if (view === 'table') {
        tableView.classList.remove('d-none');
        tableView.classList.add('force-show');
        cardView.classList.add('d-none');
        cardView.classList.add('force-hide');
        viewToggleBtns[0].classList.add('active');
        viewToggleBtns[1].classList.remove('active');
      } else {
        tableView.classList.add('d-none');
        tableView.classList.add('force-hide');
        cardView.classList.remove('d-none');
        cardView.classList.add('force-show');
        viewToggleBtns[0].classList.remove('active');
        viewToggleBtns[1].classList.add('active');
      }
      // Mevcut ekran genişliğine göre localStorage key kullan
      localStorage.setItem(getStorageKey(), view);
    }
    
    // Başlangıç görünümünü ayarla (force = true ile kullanıcı tercihini uygula)
    switchView(defaultView, !!savedView);
    
    // Butonlara event listener ekle
    viewToggleBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const view = this.getAttribute('data-view');
        switchView(view, true); // Kullanıcı tıklayınca force = true
      });
    });
    
    // Ekran boyutu değiştiğinde görünümü güncelle
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        const newStorageKey = getStorageKey();
        const newSavedView = localStorage.getItem(newStorageKey);
        const newDefaultView = newSavedView || getDefaultView();
        switchView(newDefaultView, !!newSavedView);
      }, 100);
    });
  })();
</script>


