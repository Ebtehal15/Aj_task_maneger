<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4"><%= t('usersPageTitle') %></h1>
  <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm">← <%= t('back') %></a>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <h2 class="h6 mb-3"><%= t('addUser') %></h2>
        <form method="post" action="/admin/users" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label"><%= t('username') %></label>
            <input type="text" name="username" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label"><%= t('email') %></label>
            <input type="email" name="email" class="form-control" />
            <div class="form-text"><%= t('emailHelpText') %></div>
          </div>
          <div class="mb-3">
            <label class="form-label"><%= t('password') %></label>
            <input type="password" name="password" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label"><%= t('role') %></label>
            <select name="role" class="form-select">
              <option value="user"><%= t('role_user') %></option>
              <option value="admin"><%= t('role_admin') %></option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Profil Fotoğrafı</label>
            <input type="file" name="avatar" class="form-control" accept="image/*" />
            <div class="form-text">JPG, PNG, GIF veya WebP (Max 2MB)</div>
          </div>
          <button class="btn btn-primary"><%= t('save') %></button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h6 mb-3"><%= t('existingUsers') %></h2>
        <ul class="list-group">
          <% users.forEach(u => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
              <% if (u.avatar) { %>
              <img src="/<%= u.avatar %>" alt="<%= u.username %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%; border: 2px solid #facc15;" />
              <% } else { %>
              <div style="width: 50px; height: 50px; border-radius: 50%; background: linear-gradient(135deg, #facc15, #eab308); display: flex; align-items: center; justify-content: center; color: #020617; font-weight: 700; font-size: 1.2rem;">
                <%= u.username.charAt(0).toUpperCase() %>
              </div>
              <% } %>
              <div>
                <div><strong><%= u.username %></strong></div>
                <div class="small text-muted"><%= u.email || '-' %></div>
                <div class="small text-muted text-uppercase"><%= u.role %></div>
              </div>
            </div>
            <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-primary">
              <%= t('edit') %>
            </a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>


