<script>
  // Çoklu filtre seçimi (checkbox dropdown)
  (function() {
    const filterForm = document.getElementById('filterForm');
    const checkboxes = document.querySelectorAll('.filter-type-checkbox');
    const filterTypesInput = document.getElementById('filterTypesInput');
    const filterOptions = document.querySelectorAll('.filter-option');
    const dropdownBtn = document.getElementById('filtersDropdownBtn');
    const dropdownLabel = document.getElementById('filtersDropdownLabel');
    const STORAGE_KEY = 'reportsSelectedFilterTypes';

    function getSelectedTypes() {
      return Array.from(checkboxes)
        .filter(cb => cb.checked)
        .map(cb => cb.value);
    }

    function setSelectedTypes(types) {
      const set = new Set(types || []);
      checkboxes.forEach(cb => {
        cb.checked = set.has(cb.value);
      });
    }

    function updateDropdownLabel(selected) {
      if (!dropdownBtn || !dropdownLabel) return;
      const base = dropdownBtn.getAttribute('data-base-label') || 'Filters';
      dropdownLabel.textContent = selected.length ? `${base} (${selected.length})` : base;
    }

    function setVisibility(selected) {
      filterOptions.forEach(opt => {
        const type = opt.getAttribute('data-filter-type');
        opt.style.display = selected.includes(type) ? 'block' : 'none';
      });
    }

    function saveToStorage(selected) {
      try {
        localStorage.setItem(STORAGE_KEY, (selected || []).join(','));
      } catch (e) {
        // ignore
      }
    }

    function loadFromStorage() {
      try {
        const raw = localStorage.getItem(STORAGE_KEY);
        if (!raw) return [];
        return raw.split(',').map(s => s.trim()).filter(Boolean);
      } catch (e) {
        return [];
      }
    }

    function clearInputsWithin(sectionEl) {
      if (!sectionEl) return;
      const inputs = sectionEl.querySelectorAll('select, input');
      inputs.forEach(el => {
        if (el.tagName === 'SELECT') el.value = '';
        if (el.tagName === 'INPUT') el.value = '';
      });
    }

    // Init (page load)
    // If server rendered filterTypes (from query or inferred), prefer them; otherwise use localStorage.
    const serverInitialRaw = (filterTypesInput && typeof filterTypesInput.value === 'string') ? filterTypesInput.value : '';
    const serverInitial = serverInitialRaw.split(',').map(s => s.trim()).filter(Boolean);
    const storageInitial = loadFromStorage();

    const initial = serverInitial.length ? serverInitial : storageInitial;
    if (initial.length) {
      setSelectedTypes(initial);
    }
    const actualInitial = getSelectedTypes();
    if (filterTypesInput) filterTypesInput.value = actualInitial.join(',');
    updateDropdownLabel(actualInitial);
    setVisibility(actualInitial);
    // persist initial so refresh keeps it even if query didn't include filterTypes
    saveToStorage(actualInitial);

    // On checkbox toggle
    checkboxes.forEach(cb => {
      cb.addEventListener('change', function() {
        const selected = getSelectedTypes();
        if (filterTypesInput) filterTypesInput.value = selected.join(',');
        updateDropdownLabel(selected);
        setVisibility(selected);
        saveToStorage(selected);

        // If user disabled a filter type, clear its inputs and submit to update list immediately
        if (!this.checked && filterForm) {
          const section = document.querySelector(`.filter-option[data-filter-type="${this.value}"]`);
          clearInputsWithin(section);
          filterForm.submit();
        }
      });
    });
  })();

  // Filtreleme formunu otomatik submit et
  (function() {
    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
      const filterInputs = filterForm.querySelectorAll('.filter-input');
      let submitTimeout;
      
      filterInputs.forEach(input => {
        input.addEventListener('change', function() {
          // Debounce: Kullanıcı yazmayı bitirdikten 300ms sonra submit et
          clearTimeout(submitTimeout);
          submitTimeout = setTimeout(() => {
            filterForm.submit();
          }, 300);
        });
      });
    }
  })();

  // Filtreleri sıfırlama
  (function() {
    const resetFiltersBtn = document.getElementById('resetFiltersBtn');
    if (resetFiltersBtn) {
      resetFiltersBtn.addEventListener('click', function() {
        try {
          localStorage.removeItem('reportsSelectedFilterTypes');
        } catch (e) {
          // ignore
        }
        window.location.href = '/admin/reports';
      });
    }
  })();
</script>

