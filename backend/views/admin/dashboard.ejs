<script>
  // Sayfa yüklenmeden önce varsayılan görünümü belirle (FOUC önlemek için)
  (function() {
    const isMobile = window.innerWidth < 768;
    const storageKey = isMobile ? 'taskViewPreferenceMobile' : 'taskViewPreferenceDesktop';
    const savedView = localStorage.getItem(storageKey);
    const defaultView = savedView || (isMobile ? 'card' : 'table');
    
    // HTML'e data attribute ekle
    document.documentElement.setAttribute('data-default-view', defaultView);
  })();
</script>

