<!-- Tablo Görünümü -->
<div class="card shadow-sm task-view-container d-none" id="tableView" data-view="table">
  <div class="card-body p-0">
    <% if (!tasks.length) { %>
    <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th><%= t('taskTitle') %></th>
            <th><%= t('konuSorumlusu') %></th>
            <th><%= t('departman') %></th>
            <th><%= t('status') %></th>
            <th><%= t('deadline') %></th>
            <th><%= t('completedAt') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach((task, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <%= task.title %>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger ms-2"><%= t('urgent') %></span>
              <% } %>
            </td>
            <td><%= task.konu_sorumlusu_username || task.assigned_username || '-' %></td>
            <td><%= task.departman || '-' %></td>
            <td>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </td>
            <td><%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %></td>
            <td><%= task.completed_at ? (typeof task.completed_at === 'string' ? task.completed_at.slice(0,10) : new Date(task.completed_at).toISOString().slice(0,10)) : '-' %></td>
            <td class="text-end">
              <a href="/admin/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary">
                <%= t('viewTask') %>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

<!-- Card Görünümü -->
<div class="task-view-container" id="cardView" data-view="card">
  <% if (!tasks.length) { %>
  <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
  <% } else { %>
  <div class="row g-3">
    <% tasks.forEach(task => { %>
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm h-100 task-card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <span class="badge bg-secondary">#<%= task.id %></span>
            <div>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger me-1"><%= t('urgent') %></span>
              <% } %>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </div>
          </div>
          <h5 class="card-title mb-3"><%= task.title %></h5>
          <div class="task-card-info">
            <p class="mb-2 small">
              <i class="bi bi-person-badge"></i> <strong><%= t('konuSorumlusu') %>:</strong> 
              <span class="text-muted"><%= task.konu_sorumlusu_username || '-' %></span>
            </p>
            <div class="mb-2 small">
              <i class="bi bi-people"></i> <strong><%= t('team') %>:</strong>
              <span class="text-muted ms-2">
                <% 
                  const teamMembers = [];
                  if (task.assigned_username) teamMembers.push(task.assigned_username);
                  if (task.sorumlu_2_username) teamMembers.push(task.sorumlu_2_username);
                  if (task.sorumlu_3_username) teamMembers.push(task.sorumlu_3_username);
                %>
                <%= teamMembers.length > 0 ? teamMembers.join(', ') : '-' %>
              </span>
            </div>
            <% if (task.bolge || task.il || task.belediye) { %>
            <p class="mb-2 small">
              <i class="bi bi-geo-alt"></i> 
              <% if (task.bolge) { %><span class="text-muted"><%= task.bolge %></span><% } %>
              <% if (task.il) { %> - <span class="text-muted"><%= task.il %></span><% } %>
              <% if (task.belediye) { %> - <span class="text-muted"><%= task.belediye %></span><% } %>
            </p>
            <% } %>
            <% if (task.departman) { %>
            <p class="mb-2 small">
              <i class="bi bi-building"></i> <strong><%= t('departman') %>:</strong> 
              <span class="text-muted"><%= task.departman %></span>
            </p>
            <% } %>
            <p class="mb-0 small">
              <i class="bi bi-calendar"></i> <strong><%= t('deadline') %>:</strong> 
              <span class="text-muted">
                <%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %>
              </span>
            </p>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 pt-0">
          <a href="/admin/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary w-100">
            <i class="bi bi-eye"></i> <%= t('viewTask') %>
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>

<script>
  // Görünüm değiştirme
  (function() {
    const viewToggleBtns = document.querySelectorAll('.view-toggle-btn');
    const tableView = document.getElementById('tableView');
    const cardView = document.getElementById('cardView');
    
    // Ekran genişliğine göre varsayılan görünüm belirle
    function getDefaultView() {
      // Mobil için card, desktop için table
      return window.innerWidth < 768 ? 'card' : 'table';
    }
    
    // Ekran genişliğine göre localStorage key belirle
    function getStorageKey() {
      return window.innerWidth < 768 ? 'taskViewPreferenceMobile' : 'taskViewPreferenceDesktop';
    }
    
    // LocalStorage'dan kaydedilmiş görünüm tercihini yükle, yoksa ekran genişliğine göre varsayılan kullan
    const storageKey = getStorageKey();
    const savedView = localStorage.getItem(storageKey);
    // Eski localStorage key'ini temizle (migration)
    if (localStorage.getItem('taskViewPreference')) {
      localStorage.removeItem('taskViewPreference');
    }
    const defaultView = savedView || getDefaultView();
    
    function switchView(view, force = false) {
      const isMobile = window.innerWidth < 768;
      
      // Eğer kullanıcı tercihi yoksa ve force değilse, CSS varsayılanını kullan
      if (!force && !savedView) {
        const cssDefaultView = isMobile ? 'card' : 'table';
        if (view !== cssDefaultView) {
          view = cssDefaultView;
        }
      }
      
      // Force class'larını temizle
      tableView.classList.remove('force-show', 'force-hide');
      cardView.classList.remove('force-show', 'force-hide');
      
      if (view === 'table') {
        tableView.classList.remove('d-none');
        tableView.classList.add('force-show');
        cardView.classList.add('d-none');
        cardView.classList.add('force-hide');
        viewToggleBtns[0].classList.add('active');
        viewToggleBtns[1].classList.remove('active');
      } else {
        tableView.classList.add('d-none');
        tableView.classList.add('force-hide');
        cardView.classList.remove('d-none');
        cardView.classList.add('force-show');
        viewToggleBtns[0].classList.remove('active');
        viewToggleBtns[1].classList.add('active');
      }
      // Mevcut ekran genişliğine göre localStorage key kullan
      localStorage.setItem(getStorageKey(), view);
    }
    
    // Başlangıç görünümünü ayarla (force = true ile kullanıcı tercihini uygula)
    switchView(defaultView, !!savedView);
    
    // Butonlara event listener ekle
    viewToggleBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const view = this.getAttribute('data-view');
        switchView(view, true); // Kullanıcı tıklayınca force = true
      });
    });
    
    // Ekran boyutu değiştiğinde görünümü güncelle
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        const newStorageKey = getStorageKey();
        const newSavedView = localStorage.getItem(newStorageKey);
        const newDefaultView = newSavedView || getDefaultView();
        switchView(newDefaultView, !!newSavedView);
      }, 100);
    });
  })();
</script>


