<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4"><%= t('tasks') %></h1>
  <div class="d-flex gap-2">
    <a href="/admin/reports/export" class="btn btn-success btn-sm">
      <i class="bi bi-file-earmark-excel"></i>
      <%= t('exportExcel') %>
    </a>
    <a href="/admin/tasks/new" class="btn btn-success btn-sm">
      <i class="bi bi-plus-circle"></i>
      <%= t('createTask') %>
    </a>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if (!tasks.length) { %>
    <p class="p-3 mb-0 text-muted"><%= t('noTasks') %></p>
    <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th><%= t('taskTitle') %></th>
            <th><%= t('konuSorumlusu') %></th>
            <th><%= t('departman') %></th>
            <th><%= t('status') %></th>
            <th><%= t('deadline') %></th>
            <th><%= t('completedAt') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% tasks.forEach((task, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <div><strong><%= task.title %></strong></div>
              <% if (task.task_subject && task.task_subject.trim()) { %>
              <div class="small text-muted mt-1"><%= task.task_subject %></div>
              <% } %>
              <% if (task.acil === true || task.acil === 'true' || task.acil === 't') { %>
                <span class="badge bg-danger ms-2"><%= t('urgent') %></span>
              <% } %>
            </td>
            <td><%= task.konu_sorumlusu_username || task.assigned_username || '-' %></td>
            <td><%= task.departman || '-' %></td>
            <td>
              <span class="badge status-<%= task.status %>">
                <%= t('status_' + task.status) %>
              </span>
            </td>
            <td><%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %></td>
            <td><%= task.completed_at ? (typeof task.completed_at === 'string' ? task.completed_at.slice(0,10) : new Date(task.completed_at).toISOString().slice(0,10)) : '-' %></td>
            <td class="text-end">
              <a href="/admin/tasks/<%= task.id %>" class="btn btn-sm btn-outline-primary">
                <%= t('view') %>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</div>

