<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4"><%= task.title %></h1>
  <a href="/user/tasks" class="btn btn-outline-secondary btn-sm">← <%= t('back') %></a>
</div>

<div class="row">
  <div class="col-md-7">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <p class="mb-1 text-muted"><strong><%= t('taskDescription') %>:</strong></p>
        <p><%= task.description || '-' %></p>

        <p class="mb-1">
          <strong><%= t('status') %>:</strong>
          <span class="badge status-<%= task.status %>">
            <%= t('status_' + task.status) %>
          </span>
        </p>
        <p class="mb-1">
          <strong><%= t('deadline') %>:</strong>
          <%= task.deadline ? (typeof task.deadline === 'string' ? task.deadline.slice(0,10) : new Date(task.deadline).toISOString().slice(0,10)) : '-' %>
        </p>
        <p class="mb-0">
          <strong><%= t('createdBy') %>:</strong> <%= task.created_username %>
        </p>
      </div>
    </div>

    <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, rgba(250, 204, 21, 0.03) 0%, rgba(255, 255, 255, 1) 100%); border-left: 3px solid #facc15 !important;">
      <div class="card-body p-3">
        <div class="d-flex align-items-center mb-3">
          <div class="me-2" style="width: 32px; height: 32px; border-radius: 8px; background: linear-gradient(135deg, #facc15, #eab308); display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-pencil-square text-dark" style="font-size: 1rem;"></i>
          </div>
          <div>
            <h2 class="h6 mb-0 fw-bold" style="font-size: 0.95rem;"><%= t('status') %></h2>
            <small class="text-muted" style="font-size: 0.75rem;">Görev durumunu güncelleyin ve not ekleyin</small>
          </div>
        </div>
        
        <form
          method="post"
          action="/user/tasks/<%= task.id %>/update"
          enctype="multipart/form-data"
        >
          <div class="row g-2">
            <div class="col-md-12">
              <label class="form-label fw-semibold" style="font-size: 0.875rem;">
                <i class="bi bi-flag me-1"></i><%= t('status') %>
              </label>
              <select name="status" class="form-select" style="border-radius: 8px; border: 2px solid #e5e7eb; font-size: 0.875rem;">
                <option value="pending" <%= task.status === 'pending' ? 'selected' : '' %>>
                  <%= t('status_pending') %>
                </option>
                <option value="in_progress" <%= task.status === 'in_progress' ? 'selected' : '' %>>
                  <%= t('status_in_progress') %>
                </option>
                <option value="done" <%= task.status === 'done' ? 'selected' : '' %>>
                  <%= t('status_done') %>
                </option>
              </select>
            </div>
            
            <div class="col-md-12">
              <label class="form-label fw-semibold" style="font-size: 0.875rem;">
                <i class="bi bi-chat-left-text me-1"></i>Not / Açıklama
                <button type="button" class="btn btn-sm btn-link p-0 ms-2 translate-btn" data-text-id="note" title="<%= t('translate') %>">
                  <i class="bi bi-translate"></i>
                </button>
              </label>
              <textarea
                name="note"
                id="note"
                rows="3"
                class="form-control"
                placeholder="<%= t('notePlaceholder') %>"
                style="border-radius: 8px; border: 2px solid #e5e7eb; resize: vertical; font-size: 0.875rem;"
              ></textarea>
            </div>
            
            <div class="col-md-12">
              <label class="form-label fw-semibold" style="font-size: 0.875rem;">
                <i class="bi bi-paperclip me-1"></i><%= t('uploadFiles') %>
              </label>
              <input
                type="file"
                name="attachments"
                class="form-control"
                multiple
                accept=".pdf,.xls,.xlsx,.jpg,.jpeg,.png"
                style="border-radius: 8px; border: 2px dashed #d1d5db; padding: 0.5rem; font-size: 0.875rem;"
              />
              <div class="form-text mt-1" style="font-size: 0.75rem;">
                <i class="bi bi-info-circle me-1"></i>PDF, Excel, JPG, PNG dosyaları yükleyebilirsiniz (Max 5 dosya)
              </div>
            </div>
            
            <div class="col-md-12">
              <button type="submit" class="btn btn-primary w-100" style="border-radius: 8px; padding: 0.5rem 1rem; font-weight: 600; font-size: 0.875rem; background: linear-gradient(135deg, #facc15, #eab308); border: none; color: #020617; box-shadow: 0 2px 8px rgba(250, 204, 21, 0.3);">
                <i class="bi bi-check-circle me-2"></i><%= t('save') %>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="h6 mb-3"><%= t('uploadFiles') %></h2>
        <% if (!files.length) { %>
        <p class="text-muted mb-0"><%= t('noTasks') %></p>
        <% } else { %>
        <ul class="list-group">
          <% files.forEach(file => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= file.original_name %></span>
            <a href="/uploads/<%= file.filename %>" target="_blank" class="btn btn-sm btn-outline-secondary">
              <%= t('view') %>
            </a>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const translateBtns = document.querySelectorAll('.translate-btn');
  const currentLang = '<%= typeof lang !== "undefined" ? lang : "tr" %>';
  
  translateBtns.forEach(btn => {
    btn.addEventListener('click', async function() {
      const textId = this.getAttribute('data-text-id');
      const text = this.getAttribute('data-text');
      
      let textToTranslate = '';
      let targetElement = null;
      
      if (textId) {
        targetElement = document.getElementById(textId);
        if (targetElement) {
          textToTranslate = targetElement.value || targetElement.textContent;
        }
      } else if (text) {
        textToTranslate = text;
        const textIdAttr = this.getAttribute('data-display-id');
        if (textIdAttr) {
          targetElement = document.getElementById(textIdAttr);
        } else {
          targetElement = document.getElementById('description-display');
        }
      }
      
      if (!textToTranslate || !textToTranslate.trim()) {
        alert('Çevrilecek metin bulunamadı');
        return;
      }
      
      const originalIcon = this.querySelector('i');
      const originalClass = originalIcon.className;
      originalIcon.className = 'bi bi-hourglass-split';
      this.disabled = true;
      
      try {
        const response = await fetch('/admin/translate', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            text: textToTranslate,
            targetLang: currentLang
          })
        });
        
        const result = await response.json();
        
        if (result.success && result.translated) {
          if (targetElement) {
            if (targetElement.tagName === 'TEXTAREA' || targetElement.tagName === 'INPUT') {
              targetElement.value = result.translated;
            } else {
              targetElement.textContent = result.translated;
            }
          }
        } else {
          alert('Çeviri başarısız oldu');
        }
      } catch (error) {
        console.error('Translate error:', error);
        alert('Çeviri sırasında hata oluştu');
      } finally {
        originalIcon.className = originalClass;
        this.disabled = false;
      }
    });
  });
});
</script>


